 @page
@using Data.DataAccess
@using Data.Models
@model Event_Organizer.web.Pages.EventModel
@{
    var userName = Model.CurrentUser != null ? Model.CurrentUser.Name : "User";
    var eventName = Model.ActiveEvent != null ? Model.ActiveEvent.Name : "No Event Found";
    ViewData["Title"] = $"Welcome {userName} to {eventName}";
}
<form method="get" action="/UserSelect">
    <input type="hidden" name="eventId" value="@Request.Query["eventId"].ToString()" />
    <button type="submit" class="btn btn-primary" style="margin-top: 5px;">Go back to user selection</button>
</form>


<nav class="navbar bg-body-tertiary mb-4">
    <div class="container-fluid d-flex justify-content-center">
        <h1 class="text-dark bg-light p-3 rounded">
            Welcome
            @if (Model.CurrentUser?.VotingColor != null)
            {
                <span class="badge text-white" style="background-color: @Model.CurrentUser.VotingColor;">
                    @Model.CurrentUser?.Name
                </span>
            }
            else
            {
                <span class="badge text-white" style="background-color: #007bff;">
                    @Model.CurrentUser?.Name
                </span>
            }
            to @(Model.ActiveEvent?.Name ?? "No Event Found")
        </h1>
    </div>
</nav>


<div class="container-fluid mt-4" style="margin-bottom: 30px;" style="margin-bottom: 30px;">
    <div style="background-color: white; padding: 20px; border-radius: 10px; margin: 0 auto; max-width: 400px; text-align: center;">
        <form method="post" asp-page-handler="AddActivity" id="addActivityForm" style="display: inline-block;">
            <input type="hidden" name="EventId" value="@Model.EventId" />
            <input type="hidden" name="ActivityName" value="New Activity" />
            <input type="hidden" name="Description" value="Details" />

            <!-- Add Activity Button -->
            <button type="submit" class="btn btn-success"
                    style="padding: 15px 30px; font-size: 18px;">
                Add Activity
            </button>
        </form>

        <!-- Button trigger modal -->
        <button type="button" class="btn btn-danger rounded-circle ms-3" data-bs-toggle="modal" data-bs-target="#tutorialModal" style="display: inline-block;">
            <i class="bi bi-question-circle"></i>
        </button>
    </div>
</div>


<div class="row" id="activity-list">
    @if (Model.Activities != null)
    {
        @foreach (var activity in Model.Activities.Reverse())
        {
            <div class="col-sm-6 mb-3 mb-sm-0 activity-card" id="activity-@activity.Id">
                <div class="card">
                    <div class="card-body">
                        @foreach (User userVote in activity.Users)
                        {
                            <span class="badge text-white" style="background-color: @userVote.VotingColor;">@userVote.Name</span>
                        }

                        <div class="d-flex justify-content-between align-items-start">
                            <!-- Determine if this is the new activity and start it in edit mode -->
                            <!-- View Mode Section -->
                            <div id="viewMode-@activity.Id" style="word-break: break-word; max-width: 80%; padding: 15px 0; display: @(Model.NewActivityId == activity.Id ? "none" : "block");">
                                <h5 class="card-title" style="margin-bottom: 10px;">@activity.Name</h5>
                                <p class="card-text" style="margin-bottom: 15px;">@activity.Description</p>
                            </div>

                            <!-- Edit Mode Section -->
                            <form method="post" asp-page-handler="EditActivity" id="editForm-@activity.Id" style="display: @(Model.NewActivityId == activity.Id ? "block" : "none");" onsubmit="return handleEmptyInputs('@activity.Id')">
                                <input type="hidden" name="ActivityId" value="@activity.Id" />
                                <input type="hidden" name="EventId" value="@Model.ActiveEvent.Id" />
                                <div class="mb-3">
                                    <label for="UpdatedActivityName" class="form-label">Activity Name:</label>
                                    <input class="form-control" id="UpdatedActivityName-@activity.Id" name="UpdatedActivityName" placeholder="@activity.Name" />
                                </div>

                                <div class="mb-3">
                                    <label for="UpdatedDescription" class="form-label">Description:</label>
                                    <input class="form-control" id="UpdatedDescription-@activity.Id" name="UpdatedDescription" placeholder="@activity.Description" />
                                </div>

                                <button type="submit" class="btn btn-success">Save Changes</button>
                                <button type="button" class="btn btn-secondary" onclick="toggleEditMode('@activity.Id')">Cancel</button>
                            </form>

                            <div class="d-flex flex-column align-items-end" style="min-width: 10%;">
                                <button type="button" class="btn btn-secondary m-2 w-100" onclick="toggleEditMode('@activity.Id')">Edit</button>

                                <form method="post" asp-page-handler="DeleteActivity" style="display:inline;" class="m-2 w-100">
                                    <input type="hidden" name="ActivityId" value="@activity.Id" />
                                    <input type="hidden" name="EventId" value="@Model.ActiveEvent.Id" />
                                    <button type="submit" class="btn btn-danger w-100">Delete</button>
                                </form>

                                <form method="post" asp-page-handler="Vote" style="display:inline;" class="m-2 w-100">
                                    <input type="hidden" name="EventId" value="@Model.EventId" />
                                    <input type="hidden" name="activityId" value="@activity.Id" />
                                    <button type="submit" class="btn btn-primary w-100">VOTE</button>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>


<script>
    // JavaScript function to handle empty inputs
    function handleEmptyInputs(activityId) {
        const activityNameInput = document.getElementById(`UpdatedActivityName-${activityId}`);
        const descriptionInput = document.getElementById(`UpdatedDescription-${activityId}`);

        // If the input is empty, set its value to the placeholder (original value)
        if (!activityNameInput.value.trim()) {
            activityNameInput.value = activityNameInput.placeholder;
        }
        if (!descriptionInput.value.trim()) {
            descriptionInput.value = descriptionInput.placeholder;
        }

        return true; // Allow form submission
    }
</script>



<!-- Modal -->
<div class="modal fade" id="tutorialModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">This is the event you are currently organizing.</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Here you can: </p>
                <h4>1) Add activities to the event</h4>
                <p>Just press the "add activity" button and type a name and optional description for an activity you would like to include as a voting alternative for the event.</p>
                <p>The activity you added will appear on the event page so that people can vote on it.</p>
                <h4>2) Vote on existing activities</h4>
                <p>Press the "Vote" button to select the activity of your preference.</p>
                @if (Model.CurrentUser.IsAdmin)
                {
                    <h4>3) End Voting</h4>
                    <p>To end the voting and proceed to view the voting result, press the "End Voting" button. Make sure that everybody has voted before ending the voting.</p>
                }
                <p>May the best activity win!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    // JavaScript function to toggle between view mode and edit mode
    function toggleEditMode(activityId) {
        const viewMode = document.getElementById(`viewMode-${activityId}`);
        const editForm = document.getElementById(`editForm-${activityId}`);

        if (viewMode.style.display === "none") {
            viewMode.style.display = "block";
            editForm.style.display = "none";
        } else {
            viewMode.style.display = "none";
            editForm.style.display = "block";
        }
    }
</script>
<!-- Participants List -->
<div class="container-fluid mt-4">
    @if (Model.Users != null && Model.Users.Any())
    {
        <!-- Wrapper for header and list -->
        <div class="bg-light p-3 rounded">
            <h4 class="text-dark">Participants</h4>
            <ul class="list-group">
                @foreach (User participant in Model.Users)
                {
                    <li class="list-group-item">
                        <span class="badge text-white" style="background-color: @participant.VotingColor;">@participant.Name</span>
                    </li>
                }
            </ul>
        </div>
    }
    else
    {
        <!-- Wrapper for header and no participants message -->
        <div class="bg-light p-3 rounded">
            <h4 class="text-dark">Participants</h4>
            <p class="text-dark">No participants found</p>
        </div>
    }
</div>

<!-- End Voting Button and Warning (only dispolayed for admin user.)-->
@if (Model.ActiveEvent != null && Model.ActiveEvent.OpenForEditing && Model.CurrentUser is not null && Model.CurrentUser.IsAdmin)
{
    <div class="container mt-4">
        <div class="card bg-white p-4 shadow-sm">
            <!-- End Voting Button (always visible) -->
            <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="@((Model.Activities == null || !Model.Activities.Any()) ? "#noActivitiesModal" : "#endVotingModal")">
                End Voting
            </button>
        </div>
    </div>
}

<!-- Modal when there are no activities -->
<div class="modal fade" id="noActivitiesModal" tabindex="-1" aria-labelledby="noActivitiesModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="noActivitiesModalLabel">No Activities Found</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>You cannot end the voting because there are no activities in the event. Please add activities first.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- End Voting Confirmation Modal when activities are present -->
<div class="modal fade" id="endVotingModal" tabindex="-1" aria-labelledby="endVotingModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="endVotingModalLabel">Confirm End Voting</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to end the voting? This action will lock the event and count the votes to determine the winner. This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <form method="post" asp-page-handler="EndVoting">
                    <input type="hidden" name="EventId" value="@Model.ActiveEvent.Id" />
                    <button type="submit" class="btn btn-warning">Yes, End Voting</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>


<!-- Check if the modal should be shown -->
@if (Model.IsFirstTimeOnEventPage)
{
    <script>
        window.onload = function () {
            var tutorialModal = new bootstrap.Modal(document.getElementById('tutorialModal'));
            tutorialModal.show();
        };
    </script>
}

