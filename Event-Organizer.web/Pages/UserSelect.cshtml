@page
@using Data.DataAccess
@using Data.Models
@model Event_Organizer.web.Pages.UserSelectModel
@{
}

<div class="container mt-5">
    <div class="row">

        <!-- Table on the right -->
        <div class="col-md-6">
            <div class="bg-white p-0 rounded shadow">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th class="bg-primary text-white p-2 rounded mb-2 w-75 text-center">Event participants</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Users != null && Model.Users.Any())
                        {
                            @foreach (User user in Model.Users)
                            {
                                <tr>
                                    <td>
                                        <div style="display: flex; align-items: center;">
                                            <!-- Badge with user color -->
                                            <form method="post" asp-page-handler="SelectUser" asp-route-userId="@user.Id" style="display: inline;">
                                                <input type="hidden" name="EventId" value="@Model.EventId" />
                                                <button type="submit" class="btn badge text-white text-decoration-none" style="background-color: @user.VotingColor; border: none; padding: 10px; margin-right: 8px;">
                                                    @user.Name
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }

                        }
                        else
                        {
                            <tr>
                                <td colspan="1" class="text-center">Oh so empty...</td>
                            </tr>
                        }
                    </tbody>

                </table>
                @if (Model.Users != null && Model.Users.Any())
                {
                    <!-- Additional Text Box -->
                    <div class="custom-text-box">
                        <p>
                            Click your name to proceed to your event page
                        </p>
                    </div>
                }
            </div>
        </div>
        <!-- Form on the left -->
        <div class="col-md-6 d-flex flex-column align-items-center">
            <p class="bg-primary text-white p-2 rounded mb-2 w-75 text-center">...Not in the list?</p>
            <form method="POST" class="w-75 bg-white p-4 rounded shadow">
                <div class="form-group">
                    <!-- Input field for the user's name -->
                    <input asp-for="NewUser" class="form-control" placeholder="Enter your name" />
                    <button type="submit" class="btn btn-primary mt-2 w-100">Submit</button>
            </form>
        </div>

    </div>
</div>